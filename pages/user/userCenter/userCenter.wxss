.container {
  background-color: white;
  padding-top: 0.001px;
}

.userInfo {
  background: #c34b58;
  display: flex;
  flex-direction: column; /**从上到下布局**/
  align-items: center; /**定义项目在交叉轴上如何对齐。
**/
  width: 100%;
}

.userAvatar {
  margin-top: 40px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  vertical-align: middle;
}

.userName {
  color: white;
  font-size: 14px;
  padding-top: 15px;
  padding-bottom: 15px;
}

.userInfo_list {
  width: 100%;
}

.itemCell {
  padding: 15px;
  height: 45px;
  border-bottom: 1px solid #dadada;
  position: relative;
  display: flex;
  align-items: center;
}

.itemCellImage {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}

.itemCellImageValue {
  width: 30px;
  height: 30px;
}

.itemCellText {
  display: inline-block;
}

.itemCellTextValue {
  font-size: 14px;
  color: #939393;
}

